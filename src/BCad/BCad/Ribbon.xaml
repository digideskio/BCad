<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IxMilia.BCad.Ribbon">
    <ContentView.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="24" />
                <RowDefinition Height="96" />
            </Grid.RowDefinitions>

            <!-- tabs -->
            <StackLayout Orientation="Horizontal" Grid.Row="0" x:Name="buttonLayout">
            </StackLayout>

            <!-- tab content -->
            <ContentView Grid.Row="1" BackgroundColor="CornflowerBlue" x:Name="tabContent">
            </ContentView>
        </Grid>
    </ContentView.Content>
</ContentView>
